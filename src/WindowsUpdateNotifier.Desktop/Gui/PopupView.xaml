<Window x:Class="WindowsUpdateNotifier.PopupView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WindowsUpdateNotifier" 
        Title="MainWindow" WindowStartupLocation="Manual"
        Height="100" Width="300" ShowInTaskbar="False" Topmost="True"
        Background="#FF7C7C7C" WindowStyle="None" AllowsTransparency="True"
        local:WindowBehavior.BackgroundClickCommand="{Binding OnOpenWindowsUpdateControlPanelCommand}">
    
    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <EventTrigger.Actions>
                <BeginStoryboard>
                    <Storyboard TargetProperty="Opacity" local:DataTriggerBehavior.StoryCompletedCommand="{Binding OnCloseCommand}">
                        <DoubleAnimation From="0" To="0.97" Duration="0:0:2"/>
                        <DoubleAnimation From="0.97" To="0" Duration="0:0:2" BeginTime="0:0:15"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger.Actions>
        </EventTrigger>
    </Window.Triggers>
    
    <Border BorderBrush="#585757" BorderThickness="3">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
        
            <DockPanel Grid.Row="0">
                <Button DockPanel.Dock="Right" Background="#00DDDDDD" Width="30" Height="30" 
                        Command="{Binding OnCloseCommand}" Margin="0,0,5,0">
                
                    <Image Source="/WindowsUpdateNotifier;component/Resources/close.png" Width="16" Height="16"  />
                </Button>
            
                <Label Content="{Binding Title}" Foreground="#FFEDEDED" FontSize="17" FontWeight="Bold" Margin="5,5,0,0" FontFamily="Calibri"  />
            
            </DockPanel>

            <DockPanel Grid.Row="1">
                <Label Content="{Binding Message}" Foreground="#FFEDEDED" Margin="5,5,0,0" FontFamily="Calibri" FontSize="16"  />
            </DockPanel>
        </Grid>
    </Border>
</Window>
